import screen1 from '../assets/app_desktop_3.jpg'
import screen1_webp from '../assets/app_desktop_3.webp'
import screen2 from '../assets/app_mobile2.png'
import screen2_webp from '../assets/app_mobile2.webp'
import screen_art from '../assets/app_mobile_art.png'
import flag1 from '../assets/flag_1_transparent.png'
import flag2 from '../assets/flag_2_Crop2.png'
---
<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
